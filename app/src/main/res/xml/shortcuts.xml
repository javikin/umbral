<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:shortcutId="scan_nfc"
        android:enabled="true"
        android:icon="@drawable/ic_nfc"
        android:shortcutShortLabel="@string/scan_nfc"
        android:shortcutLongLabel="@string/scan_nfc">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.umbral"
            android:targetClass="com.umbral.presentation.MainActivity"
            android:data="umbral://nfc/scan" />
    </shortcut>
    <shortcut
        android:shortcutId="scan_qr"
        android:enabled="true"
        android:icon="@drawable/ic_qr"
        android:shortcutShortLabel="@string/scan_qr"
        android:shortcutLongLabel="@string/scan_qr">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.umbral"
            android:targetClass="com.umbral.presentation.MainActivity"
            android:data="umbral://qr/scan" />
    </shortcut>
</shortcuts>
