        android:pathData="M0,140 L80,80 L140,110 L200,70 L260,100 L300,90 L300,200 L0,200 Z"
        android:fillAlpha="0.8" />

    <!-- Ground -->
    <path
        android:fillColor="#81C784"
        android:pathData="M0,160 L300,160 L300,200 L0,200 Z" />

    <!-- Trees (simple triangular shapes) -->
    <!-- Tree 1 -->
    <path
        android:fillColor="#66BB6A"
        android:pathData="M40,180 L50,150 L60,180 Z" />
    <path
        android:fillColor="#795548"
        android:pathData="M48,180 L52,180 L52,200 L48,200 Z" />

    <!-- Tree 2 -->
    <path
        android:fillColor="#66BB6A"
        android:pathData="M100,185 L110,160 L120,185 Z" />
    <path
        android:fillColor="#795548"
        android:pathData="M108,185 L112,185 L112,200 L108,200 Z" />

