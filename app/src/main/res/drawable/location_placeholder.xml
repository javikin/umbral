<?xml version="1.0" encoding="utf-8"?>
<!--
  Placeholder image for expedition locations.
  Used during development until real location artwork is created.
  Shows a generic landscape with trees and mountains.
-->
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="300dp"
    android:height="200dp"
    android:viewportWidth="300"
    android:viewportHeight="200">

    <!-- Sky gradient (simulated with solid colors) -->
