    <path
        android:fillColor="#FFFFFF"
        android:pathData="M50,30 Q40,25 40,35 Q35,35 35,40 Q35,45 50,45 Q60,45 60,40 Q60,30 50,30 Z"
        android:fillAlpha="0.8" />

    <path
        android:fillColor="#FFFFFF"
        android:pathData="M200,40 Q190,35 190,45 Q185,45 185,50 Q185,55 200,55 Q210,55 210,50 Q210,40 200,40 Z"
        android:fillAlpha="0.8" />

    <!-- Fog overlay for undiscovered state (optional, can be toggled) -->
    <path
        android:fillColor="#ECEFF1"
        android:pathData="M0,0 L300,0 L300,200 L0,200 Z"
        android:fillAlpha="0.3" />

    <!-- Location marker icon (map pin) -->
    <group android:translateX="150" android:translateY="100">
        <path
            android:fillColor="#FF5722"
            android:pathData="M0,-20 Q-10,-20 -10,-10 Q-10,0 0,15 Q10,0 10,-10 Q10,-20 0,-20 Z" />
        <path
            android:fillColor="#FFFFFF"
            android:pathData="M0,-10 m-4,0 a4,4 0,1 0,8 0a4,4 0,1 0,-8 0" />
    </group>
</vector>
